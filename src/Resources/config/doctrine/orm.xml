<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="doctrine.orm.configuration.class">Aureja\Bundle\WebProfilerBundle\Doctrine\ORM\Configuration</parameter>
    </parameters>

    <services>

        <service id="aureja_web_profiler.decorating.entity_manager"
                 class="Aureja\Bundle\WebProfilerBundle\Doctrine\ORM\EntityManagerDecorator"
                 decorates="doctrine.orm.default_entity_manager"
                 public="false"
        >
            <argument type="service" id="aureja_web_profiler.decorating.entity_manager.inner" />
        </service>

        <service id="aureja_web_profiler.orm.logger"
                 class="Aureja\Bundle\WebProfilerBundle\Doctrine\ORM\Logger"
                 public="false"
        >
            <argument type="collection"></argument>
            <argument type="service" id="debug.stopwatch" />
        </service>
    </services>

</container>
